<table class="table table-bordered text-center">
  <thead>
    <tr>
   	  <th>買方</th>
   	  <th>賣方</th>
   	  <th>發行公司</th>
   	  <th>股票類型</th>
   	  <th>數量</th>
      <th>面額</th>
      <th>幣別</th>
      <th>日期</th>
      <th>意向書</th>
      <th>Regular S</th>
   	  <th>USD合約</th>
   	  <th>RMB合約</th>
   	  <th>購買協議</th>
   	  <th>W8BEN</th>
   	  <th>換股協議</th>
   	  <th>聲明書</th>
   	  <th>合約寄買方</th>
   	  <th>合約寄賣方</th>
   	  <th>編輯</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |t| %>
    <tr>
   	  <td><%= @identity_names[t.buyer_id]%></td>
   	  <td><%= @identity_names[t.seller_id]%></td>
   	  <td><%= @company_names[t.company_id] %></td>
   	  <td><%= t.stock_class %></td>
   	  <td><%= t.stock_num %></td>
   	  <td><%= t.stock_price %></td>
   	  <td><%= t.currency %></td>
   	  <td><%= t.date_issued %></td>
   	  
   	  <td><%= status_check(t.contract_0_needed, t.contract_0?) %></td>
   	  <td><%= status_check(t.contract_1_needed, t.contract_1?) %></td>
   	  <td><%= status_check(t.contract_2_needed, t.contract_2?) %></td>
   	  <td><%= status_check(t.contract_3_needed, t.contract_3?) %></td>
   	  <td><%= status_check(t.contract_4_needed, t.contract_4?) %></td>
   	  <td><%= status_check(t.contract_5_needed, t.contract_5?) %></td>
   	  <td><%= status_check(t.contract_6_needed, t.contract_6?) %></td>
   	  <td><%= status_check(t.contract_7_needed, t.contract_7?) %></td>

   	  <td><%= t.send_buyer %></td> 
   	  <td><%= t.send_seller %></td>
   	  
   	  <td><%= link_to 'Edit', edit_transaction_path(t), class: "btn btn-primary btn-xs" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
